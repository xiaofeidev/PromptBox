{
  "manifest_version": 3,
  "name": "PromptBox",
  "version": "1.0",
  "description": "一个简单的 Prompt 文本编辑和管理工具",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_title": "PromptBox"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 